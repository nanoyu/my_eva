<h1>User info</h1>
<table class='table table-hover table-inverse'>

	<thead>
		<tr>
			<th>image</th>
			<th>name</th>
			<th colspan="3"></th>
		</tr>
	</thead>

	<tbody>
		<% @users.each do |user| %>
		<tr>
			<td>
				<% if user.profile_image_id? %>
				<%= image_tag user.profile_image_id.to_s %>
				<% else %>
				<%= image_tag 'no_image.jpg' %>
				<% end %>
			</td>
			<td><%= user.name %></td>
			<td><%= link_to 'Show', admins_user_path(user.id) %></td>
		</tr>
		<% end %>
	</tbody>

</table>