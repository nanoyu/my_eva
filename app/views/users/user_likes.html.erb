<h4>いいね</h4>

<table class='table table-hover table-inverse'>
	<thead>
		<tr>
			<th>タイトル</th>
		</tr>
	</thead>

	<tbody>
		<% @user.liked_posts.each do |post| %>
		<tr>
			<td><%= link_to posts.user.name, user_path(@user.id) %></td>
			<td><%= link_to post.title, post_path(post.id) %>
				(<%= post.liked_users.count %>)
			</td>
		</tr>
		<% end %>
	</tbody>
</table>
<p><%= link_to "戻る", user_path(current_user) %></p>
<%= will_paginate @posts, :previous_label => ' &lt 前へ', :next_label => '次へ &gt' %>
