
<h1><%= @category.category_name %></h1>

<table class='table table-hover table-inverse'>
	<thead>
		<tr>
			<th>title</th>
			<th>name</th>
		</tr>
	</thead>

	<tbody>
		<% @posts.each do |post| %>
		<tr>
			<td><%= link_to post.title, post_path(post.id) %></td>
			<td></td>
		</tr>
		<% end %>
	</tbody>
</table>

<%= paginate @posts, class: "paginate" %>