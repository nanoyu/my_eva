<h1>新規投稿</h1>

<%= form_for(@post) do |f| %>

<h4>カテゴリー</h4>
<%= f.collection_select :category_id, Category.all, :id, :category_name %>

<h4>画像</h4>
<%= f.attachment_field :product_image %>


<h4>タイトル</h4>
<%= f.text_field :title %>

<h4>商品名</h4>
<%= f.text_field :product_name %>

<h4>値段</h4>
<%= f.text_field :price %>

<h4>本文</h4>
<%= f.text_area :body %>

<%= f.submit '投稿' %>

<% end %>

<p><%= link_to "戻る", user_path(current_user) %></p>