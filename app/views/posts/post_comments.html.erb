<h4>すべてのコメント</h4>

<%= form_for [@post, @comment] do |f| %>
  <%= f.text_field :content %>
  <%= f.hidden_field :user_id, :value => current_user.id %>
  <%= f.hidden_field :post_id, :value => @post.id %>
  <br>
  <%= f.submit 'コメントする' %>
<% end %>

<% @comments.each do |c| %>
  <div>
  	<%= c.user.name %>
    <%= c.content %>
    <hr>
  </div>
<% end %>