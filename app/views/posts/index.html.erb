
<% if user_signed_in? %>
<div class="float-right">
<%= form_tag posts_path, :method => 'get' do %>
<p>
	<%= text_field_tag :search, params[:search] %>
	<%= submit_tag "Search", :title => nil %>
</p>
<% end %>
</div>

