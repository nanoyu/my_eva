
<div>
	<% unless flash[:error].blank? %>
	<%= flash[:error].each do |error| %>
	<% error %>
	<% end %>
	<% end %>
</div>

<% if user_signed_in? %>
<div class="float-right">
	<%= form_tag posts_path, :method => 'get' do %>
	<p>
		<%= text_field_tag :search, params[:search] %>
		<%= submit_tag "Search", :title => nil %>
	</p>
	<% end %>

</div>

<!--<h2>カテゴリ</h2>
<% @categories.each do |category| %>
<p><%= link_to category.category_name, category_path(category.id) %></p>
<% end %>-->

<h1>投稿一覧</h1>

<% @posts.each do |post| %>
<div>
	<% if post.user.profile_image_id? %>
	<%= image_tag post.user.profile_image_id.url(:thumb100), class: "rounded-circle" %>
	<% else %>
	<%= image_tag '/images/no_image.jpg' %>
	<% end %>
	<%= post.user.name %>
	<%= link_to post.title, post_path(post.id) %>
	(<%= post.liked_users.count %>)

	<div class="float-right">
		<% if post.user == current_user %>
		<td><%= link_to "編集", edit_post_path(post.id) %></td>
		<td><%= link_to "削除", post_path(post.id), method: :delete, data: { confirm: '削除しますか?' } %></td>
		<% end %>
	</div>
</div>
<hr>
<% end %>


<%= will_paginate @posts, :previous_label => ' &lt 前へ', :next_label => '次へ &gt' %>

<% else %>
<div id="container">
	<div id="theTarget">
		<div class="image1"></div>
		<div class="image2"></div>
		<div class="image3"></div>
	</div>
	<h3><%= link_to "MyEva アカウントを登録する", new_user_registration_path, class: "btn btn-info col-xs-10 col-xs-offset-1" %></h3>
</div>
<% end %>
